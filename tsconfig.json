{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "nodenext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "paths": {
      "miio": ["./types/miio.d.ts"],
    }
  },
  "include": ["src/**/*.ts", "types/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/__test__/*"]
}
